unit Financial.Gateway.Impl;

interface

uses
  Financial.Repository.Interfaces,
  Financial.Entities.Withdraw,
  Financial.Entities.Deposit,
  Financial.Entities.Historic;

type
  TGateway = class(TInterfacedObject, iFinancialRepository)
  private
  public
    constructor Create();
    destructor Destroy; override;
    class function New: iFinancialRepository;
    procedure SaveWithdrawal(aWithdraw: TWithdraw);
    procedure SaveDeposit(aDeposit: TDeposit);
    procedure SaveHistory(aHistory: THistoric);
    function GetBalance: Double;
  end;

implementation

constructor TGateway.Create;
begin

end;

destructor TGateway.Destroy;
begin

  inherited;
end;

class function TGateway.New: iFinancialRepository;
begin
  Result := Self.Create;
end;

end.
